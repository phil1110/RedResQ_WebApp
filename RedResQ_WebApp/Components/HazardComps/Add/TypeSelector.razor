<div class="border rounded-3">
    <div class="border-bottom p-3 pb-1">
        <h5>What kind of hazard are the people facing?</h5>
    </div>


    <div class="mt-3 p-3">
        <div>
            <InputSelect class="form-control" TValue="int?" @bind-Value="_hazardId" id="input-quiztype">
                @if (_hazardTypes != null)
                {
                    foreach (HazardType ht in _hazardTypes)
                    {
                        if (!_hazardId.HasValue)
                        {
                            _hazardId = ht.Id;
                        }

                        <option value="@ht.Id">@ht.Name</option>
                    }
                }
            </InputSelect>
        </div>

        <div class="mt-5 text-center">
            @if (!_showAdder)
            {
                <div>
                    <h5>You don't see a fitting Type?</h5>
                </div>

                <div>
                    <button class="btn btn-success" title="Add new Hazard-Type" @onclick="ToggleAdder">
                        Add it here!
                    </button>
                </div>
            }
            else
            {
                <div class="adder-container border border-1 rounded-3">
                    <TypeAdder AfterAction="@(async () => await LoadTypes())" TogglerAction="ToggleAdder" />
                </div>
            }
        </div>
    </div>
</div>