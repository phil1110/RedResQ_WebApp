<div class="d-flex align-items-end justify-content-between border-bottom p-3 pb-0 pt-1">
    <h5>Add a new Hazard-Type</h5>

    <div>
        <button class="btn bg-transparent border-0" type="button" title="Close Add-Menu" @onclick="TogglerAction">X</button>
    </div>
</div>

<form class="p-3" @onsubmit="AddType">
    <div class="form-group text-start">
        <label class="form-label" for="type-name">Name of the new Type</label>
        <input type="text" name="type-name" class="form-control" required @bind-value="TypeName" />
    </div>

    <div class="mt-3">
        <button class="btn btn-success" type="submit" title="Add the Type">Add the Type</button>
    </div>
</form>