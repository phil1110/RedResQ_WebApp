@inject NavigationManager NavigationManager

<div>
    <button type="button" class="btn btn-light bg-transparent border-0" title="Delete Quiz-Type No. @QuizType?.Id" @onclick="TogglePopUp">
        <i class="oi oi-trash text-danger"></i>
    </button>

    @if (_showPopUp)
    {
        <div class="delete-popup vh-100 vw-100" @onclick="TogglePopUp">
            <div class="delete-container" @onclick:stopPropagation="true">
                <div class="popup-header p-3">
                    <h3 class="text-danger">WARNING!</h3>

                    <button class="btn fw-bold" type="button" title="Close Quiz inspection" @onclick="TogglePopUp">
                        X
                    </button>
                </div>

                <div class="popup-content p-4">
                    <p>
                        <b>Are you sure you want to delete the following Quiz-Type?</b>
                        <br />
                        <br />
                        ID: @QuizType?.Id
                        <br />
                        Name: @QuizType?.Name
                        <br />
                        <br />
                        <b class="text-danger">This cannot be undone!</b>
                        <br />
                        <br />
                        If you are sure, double-click the red button below.
                    </p>
                </div>

                <div class="popup-footer p-3">
                    <div class="d-flex w-100 justify-content-between flex-row-reverse">
                        <button type="button" class="btn btn-success fw-bold" @onclick="TogglePopUp">Keep the Quiz-Type</button>
                        <button type="button" class="btn btn-danger" @ondblclick="DeleteQuizType">Delete the Quiz-Type</button>
                    </div>
                </div>

            </div>
        </div>
    }
</div>